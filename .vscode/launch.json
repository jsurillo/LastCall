{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "BrosCode.LastCall.Api",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/src/BrosCode.LastCall.Api/bin/Debug/net10.0/BrosCode.LastCall.Api.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/BrosCode.LastCall.Api",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
        "uriFormat": "%s/scalar"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "console": "integratedTerminal"
    }
  ]
}
